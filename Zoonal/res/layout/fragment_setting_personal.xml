<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <Button
            android:text="Cancel"
            android:id="@+id/settingCancelBtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        
        <TextView android:id="@+id/settingTitleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        
        <Button
            android:text="Done" 
            android:id="@+id/settingDoneBtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/settinglAvatarImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/setting_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp" >

        <Button
            android:id="@+id/settingPictureFromCameraBtt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:text="Add pictures from camera" />

        <Button
            android:id="@+id/settingPictureFromAlbumBtt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Add pictures from album" />
    </LinearLayout>

</LinearLayout>